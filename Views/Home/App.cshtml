 <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>test</title>

        
        <link rel="stylesheet" href="~/assets/font-awesome-4.7.0/css/font-awesome.min.css">
       
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

       <!-- My local Css files-->
        <link rel="stylesheet" type="text/css" href="~/css/style.css">
        <link href="~/css/site.css" rel="stylesheet" />
        <link href="~/css/loader.css" rel="stylesheet" />

    </head>
    <body ng-app="app" ng-controller='TableCtrl'>

        <div class="container">

                <div class="row">
                    <div class="col-xs-4 col-xs-offset-4 form-search form-inline" style="display: inline;">
                        <input class="searchBox"  ng-model="searchBox" type="text" class="search-query" placeholder="Search..." />
                    </div>
                </div>


            <div class="row pager">
                <nav class="col-xs-2 col-xs-offset-5">
                    <ul class=" ng-isolate-scope ng-valid ng-dirty   " style="    padding-left: 0px;">

                        <li><a id="pageNum" ng-click="selectPage(page , $index)"> Page no.{{page}}</a></li>

                    </ul>
                </nav>
            </div>


                <div class="pager row" style="margin-bottom:3px;">

                    <li class=" col-xs-2  previous"><a class="pagerBtn" href="#" style="    margin-top: 0px;" ng-click="selectPage(page+1 , $index)" >Previous</a></li>

                    <nav class="col-xs-4 col-xs-offset-2">
                        <ul class=" ng-isolate-scope ng-valid ng-dirty   " style="    padding-left: 0px;">

                            <li  ng-repeat="page in pages"  ng-class="{active: '.' + $index == selected}" ><a id="pageNum" ng-click="selectPage(page , $index)">{{page}}</a></li>     
                           
                        </ul>
                    </nav>

                    <li class="col-xs-2 col-xs-offset-2 next"><a class="pagerBtn" href="#" style=" margin-top: 0px;" ng-click="selectPage(page+1 , $index)" >Next</a></li>

                </div>
            
                <div ng-show="loaderBool">
                    <div class="blob blob-0"></div>
                    <div class="blob blob-1"></div>
                    <div class="blob blob-2"></div>
                    <div class="blob blob-3"></div>
                    <div class="blob blob-4"></div>
                    <div class="blob blob-5"></div>
                </div>



                <table class=" container table ">

                    <thead style="background: #c9dff0;">
                        <tr class="row">
                            <th class="col-xs-2" data-key="Name">
                                <a href="#" ng-click="sortType = 'Name'; sortReverse = !sortReverse">
                                    Start Time
                                    <span ng-show="sortType == 'Name' && !sortReverse" class="fa fa-caret-down"></span>
                                    <span ng-show="sortType == 'Name' && sortReverse" class="fa fa-caret-up"></span>
                                </a>
                            </th>
                            <th class="col-xs-2"  data-key="Address">
                                Device
                            </th>

                            <th class="col-xs-2" data-key="Events_Count">
                                Events Count
                            </th>
                            <th class="col-xs-2" data-key="Screens_Count">
                                Screens Count
                            </th>
                            <th class="col-xs-4">
                                DashboardVideo (link)
                            </th>
                        </tr>
                    </thead>

                    <tbody>



                        <!--The Table with the ng-show function -->
                        <tr class="row" ng-hide="updateBool" ng-repeat="device in devices  | orderBy:sortType:sortReverse  | filter:searchBox">
                            <td>{{device.StartTime}}</td>
                            <td>{{device.Device}}</td>
                            <td>{{device.Events.length}}</td>
                            <td>{{device.Screens.length}}</td>
                            <td> <a href="{{device.DashboardVideo}}">{{device.DashboardVideo}}</a></td>
                        </tr>
                    </tbody>
                </table>



            </div>

    

        <span class="row" ng-hide="loaderBool" style="float: right ; width:100%;    text-align: right;">
          Showing {{records}}  Records
        </span>

        <div class="container" ng-hide="loaderBool">
            <div class="pager row" style="margin-bottom:3px;">

                <li class=" col-xs-2  previous"><a class="pagerBtn" href="#" style="    margin-top: 0px;" ng-click="selectPage(page+1 , $index)">Previous</a></li>

                <nav class="col-xs-4 col-xs-offset-2">
                    <ul class=" ng-isolate-scope ng-valid ng-dirty   " style="    padding-left: 0px;">

                        <li ng-repeat="page in pages" ng-class="{active: '.' + $index == selected}"><a id="pageNum" ng-click="selectPage(page , $index)">{{page}}</a></li>

                    </ul>
                </nav>

                <li class="col-xs-2 col-xs-offset-2 next"><a class="pagerBtn" href="#" style=" margin-top: 0px;" ng-click="selectPage(page+1 , $index)">Next</a></li>

            </div>
        </div>

        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.0.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        <script data-require="angular.js@1.0.x" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.0/angular.min.js" data-semver="1.0.8"></script>

        <!-- local js -->
        <script src="~/js/app.js"></script>
        <script src="~/js/controllers/tableController.js"></script>
        <script src="~/js/services/tableService.js"></script>
       
    </body>


</html>
